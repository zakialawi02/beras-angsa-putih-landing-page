root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.{html,css,scss}]
indent_style = space
indent_size = 2
max_line_length = 200
trailing_comma = es5

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Ignore lockfiles for trimming
[package-lock.json]
insert_final_newline = false
trim_trailing_whitespace = false
